@model petstore.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 padding-8">
    <h2>Sửa đơn hàng</h2>
    <h4 class="text-danger">@Html.Raw(TempData["Errnull"])</h4>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.madon)

            <div class="form-group">
                <label class="control-label col-md-2">Mã KH</label>
                <div class="col-md-10">
                    <div class="form-control">@Model.makh</div>
                    @Html.ValidationMessageFor(model => model.makh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.thanhtoan, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="form-control">@Model.thanhtoan</div>
                    @Html.ValidationMessageFor(model => model.thanhtoan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="giaohang" class="control-label col-md-2">trạng thái:</label>
                <div class="col-md-10">
                    <select name="giaohang" id="cars" class="form-control">
                        <option checked>@Model.giaohang</option>
                        <option value="chờ xử lý">1 - chờ xử lý</option>
                        <option value="đang xử lý">2 - đang xử lý</option>
                        <option value="đang giao">3 - đang giao</option>
                        <option value="giao thành công">4 - giao thành công</option>
                        <option value="hủy">5 - hủy</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Ngày Đặt</label>
                <div class="col-md-10">
                    <div class="form-control">@Model.ngaydat</div>
                    @Html.ValidationMessageFor(model => model.ngaydat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ngaygiao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="date" name="NgayGiao" required />
                    @Html.ValidationMessageFor(model => model.ngaygiao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-actions no-color ml-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>


