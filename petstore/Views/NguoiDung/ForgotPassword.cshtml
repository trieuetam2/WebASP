
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) { 
<div class="main">
    <div class="height361">
        <h3><center>Quên mật khẩu</center></h3>
        <h4 class="text-danger">@Html.Raw(TempData["mgss"])</h4>
        <div class="text-success">
            @ViewBag.Message
        </div>

        <div class="form-group">
            <lable class="form-label">Email ID</lable>
            @Html.TextBox("EmailID", "", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <div class="control-label">
                <button type="submit" value="Submit" class="btn form-submit">Submit</button>
            </div>
        </div>
    </div>
</div>
}
