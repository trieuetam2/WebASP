@model petstore.Models.DichVu

@{
    ViewBag.Title = "SuaLichHen";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.iddichvu)

        <div class="form-group">
            @Html.LabelFor(model => model.trangthai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="suatrangthai" name="suatrangthai" class="form-control">
                    <option value="đang chờ">đang chờ</option>

                    <option value="đang chờ">1 - đang chờ</option>
                    <option value="chờ khách đến">2 - chờ khách đến</option>
                </select>
                @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "LichHen")
</div>
