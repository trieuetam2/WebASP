@model IEnumerable<petstore.Models.DichVu>

@{
    ViewBag.Title = "LichHen";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 pl-3">
    <div class="body fix-width scroll-inner">
        <table class="table table-striped">
            <tr>
                <th>Mã kh</th>
                <th>
                    @Html.DisplayNameFor(model => model.hoten)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sdt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.diachi)
                </th>
                <th>
                    trạng thái
                </th>
                <th>
                    tên loại dịch vụ
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ngaydat)
                </th>
                <th>chức năng</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.makh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hoten)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sdt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.diachi)
                    </td>
                    <td>
                        @if (item.trangthai == "đang chờ")
                        {
                            <div style="color: #007bff;">@item.trangthai</div>
                        }
                        else if (item.trangthai == "chờ khách đến")
                        {
                            <div style="color: green;">@item.trangthai</div>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tendichvu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ngaydat)
                    </td>

                    <td>
                        @Html.ActionLink("Sửa", "SuaLichHen", new { id = item.iddichvu }) &nbsp;
                        @Html.ActionLink("Xóa", "XoaLichHen", new { id = item.iddichvu })
                    </td>
                </tr>
            }

        </table>
    </div>

    <div>
        @Html.ActionLink("Quay lại", "LichHen")
    </div>

</div>
